#ifndef LIGHTS_H_
#define LIGHTS_H_

/***************************************************************************************************************
// FUNCTION: winAnimation()
//
// DESCRIPTION
// Performs the win animation
//*************************************************************************************************************/
void winAnimation();

/***************************************************************************************************************
// FUNCTION: led_off()
//
// DESCRIPTION
// Performs lose animation
//*************************************************************************************************************/
void loseAnimation();

/***************************************************************************************************************
// FUNCTION: led_off()
//
// DESCRIPTION
// Turns LED 1, 2, 3, or 4 off.
//
// INPUTS
// p_led should be 1, 2, 3, or 4.
//*************************************************************************************************************/
void led_off(int p_led);

/***************************************************************************************************************
// FUNCTION: led_on()
//
// DESCRIPTION
// Turns LED 1, 2, 3, or 4 on.
//
// INPUTS
// p_led should be 1, 2, 3, or 4.
//*************************************************************************************************************/
void led_on(int p_led);



#endif /* LIGHTS_H_ */
